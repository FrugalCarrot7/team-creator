<%- include('../partials/header') %>

    <table id="list">
        <thead>
          <tr>

            <th></th>
            <th class="tableHeader">PRINCIPAL</th>
            <th class="tableHeader">TEAM</th>
            <th class="tableHeader">CAR</th>

          </tr>
        </thead>
        <tbody>
          <% teams.forEach(function(team) { %>
            <tr>

              <td><img class="avatarImg" alt="avatar" src="<%= team.userAvatar %>" referrerpolicy="no-referrer" ></td>
              <td class="teamData"><%= team.userName %></td>
              <td class="teamData"><%= team.teamName %></td>
              <td class="teamData"><%= team.teamCar %></td>
              <td class="teamData"><a href="/teams/<%= team._id %>">DRIVERS</a></td>
            <% if(user) { %>
              <td>
                <form action="/teams/<%= team.id %>?_method=DELETE"
                class="delete-form" method="POST">
                <button type="submit">DELETE</button>
                </form>
              </td>
              <% } %>
            </tr>
            <% }); %>
        </tbody>
    </table>

<%- include('../partials/footer') %>